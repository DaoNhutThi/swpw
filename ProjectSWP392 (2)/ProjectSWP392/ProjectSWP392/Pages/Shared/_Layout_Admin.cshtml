<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectSWP392</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
     <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    @using Microsoft.AspNetCore.Http
    @using Microsoft.AspNetCore.Http.Extensions
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    <style>

        body {
            margin: 0;
            overflow-x: hidden; 
            background-color: #eee;
        }

     

        header a.navbar-brand,
        header a.nav-link {
            color: #fff;
            font-weight: bold;
            transition: color 0.3s;
        }

        header a.nav-link:hover {
            color: #0056b3;
        }

        /* Add this style to remove margin for Home */
        header a.nav-link:first-child {
            margin-right: 0;
        }

        footer {
            padding: 20px 0;
            background-color: #f8f9fa;
            color: #6c757d;
        }

        .container-main {
            margin-top: 20px;
        }

        .container-main,
        .footer {
            padding-left: 15px;
            padding-right: 15px;
        }
    </style>
    @{
        bool True = HttpContextAccessor.HttpContext.Session.GetString("FullName") == null || HttpContextAccessor.HttpContext.Session.GetString("Admin") != "True";
    }
    <script>
        var isTrue = @True.ToString().ToLower();
        if (isTrue === true) {
                window.location.href = "/Index";
            }
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                      <a class="navbar-brand text-light" asp-area="" asp-page="/Index"><img src="/image/Logo-epics.svg"
                        alt=""></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("FullName") != null && HttpContextAccessor.HttpContext.Session.GetString("Admin") == "True")
                        {
                            <li class="nav-item dropdown" style="margin-left: 510px;">
                                <a class="nav-link text-light dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Welcome, @HttpContextAccessor.HttpContext.Session.GetString("FullName")
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="margin-left: -75px;">
                                    <a class="dropdown-item" asp-area="" asp-page="/Index">ShopPage</a>
                                    <a class="dropdown-item" asp-area="" asp-page="/AccountPage/Login">Logout</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script>
        $(document).ready(function () {
            console.log('Document ready!');
            $('#myTable').DataTable({
                "lengthMenu": [4, 10, 15, 20],  
                "pageLength": 4  
            });
            $('#CateTable').DataTable({
                "lengthMenu": [8, 10, 15, 20],  
                "pageLength": 8  
            });
            $('#AccTable').DataTable({
                "lengthMenu": [8, 10, 15, 20],  
                "pageLength": 8  
            });
            $('#OrderTable').DataTable({
                "lengthMenu": [8, 10, 15, 20],  
                "pageLength": 8  
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
