@page
@model ProjectSWP392.Pages.AccountPage.Login
@{
    Layout = "~/Pages/Shared/_Layout_copy.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body {
        background-image: url('/image/page_login.svg');
        background-repeat: no-repeat;
        /* Ngăn chặn lặp lại ảnh nền */
        background-size: cover;
        height: 97.8vh !important;
        margin: 0;
    }
</style>

<h1>@ViewData["Title"]</h1>

<body>
    <section class="p-3 mt-3">
        <div class="px-4 py-5 px-md-5 text-center text-lg-start">
            <div class="container">
                <div class="row gx-lg-5 align-items-center justify-content-end">

                 
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <div class="card">
                            <div class="card-body1 py-5 px-md-5">
                                <form method="post" class="form-container">
                                       <h5 style="   margin-bottom: 2rem;
    text-align: center;
    font-weight: 800;">Login</h5>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="account.Email" class="form-control" placeholder="Email" />
                                        <span asp-validation-for="account.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="account.Password" type="password" class="form-control"
                                            placeholder="Password" />
                                        <span asp-validation-for="account.Password" class="text-danger"></span>
                                    </div>
                                    <div class="btn-list1">
                                        <a asp-page="ForgotPassword">ForgotPassword?</a>
                                        <div class="mb-3 form-check">
                                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                            <label class="form-check-label" for="exampleCheck1">Remember me</label>
                                        </div>
                                    </div>

                                    <div class="btn-list2">
                                        
                                        <a asp-page="Register" >Register</a>
                                        <button type="submit" class="btn btn-secondary">Login</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
@if (@TempData["Success"] != null)
{
    <text>
        <script>
            // Check for TempData value and show SweetAlert
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    title: 'Success!',
                    text: 'Login successfully! Welcome, MyAdmin',
                    icon: 'success'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/AdminPage/DashBoard';
                    }
                });
            });
        </script>
    </text>
}
@if (@TempData["SuccessUser"] != null)
{
    <text>
        <script>
            // Check for TempData value and show SweetAlert
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    title: 'Success!',
                    text: 'Login successfully! Welcome, My Customer',
                    icon: 'success'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/ProductPage/Index';
                    }
                });
            });
        </script>
    </text>
}
@if (TempData["LoginFail"] != null)
{
    <text>
        <script>
            // Check for TempData value and show SweetAlert
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    title: 'Error!',
                    text: 'Email or password was wrong!!',
                    icon: 'error'
                })
            });
        </script>
    </text>
}
@if (TempData["Veri"] != null)
{
    <text>
        <script>
            // Check for TempData value and show SweetAlert
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    title: 'Error!',
                    text: 'Email was not verified!!',
                    icon: 'error'
                })
            });
        </script>
    </text>
}
@if (TempData["Ban"] != null)
{
    <text>
        <script>
            // Check for TempData value and show SweetAlert
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    title: 'Error!',
                    text: 'Email was locked!!',
                    icon: 'error'
                })
            });
        </script>
    </text>
}