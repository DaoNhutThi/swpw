@page
@model ProjectSWP392.Pages.AdminPage.DetailsProduct
@{

    Layout = "~/Pages/Shared/_Layout_DetailProduct.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    .form-container {
    display: flex;
    flex-direction: column;
    gap: 0rem;
}
    .form-group{
        display: flex;
        flex-direction: row;
     margin-bottom: 0rem !important;
    }
    .Details-page .container {
    max-width: 566px !important;
    margin: auto;
    margin-top: 50px;
}
.Details-page .form-container {
    padding: 20px;
    background-color: #f8f9fa;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 35rem !important;
}
label {
    display: inline-block;
    margin-bottom: 0.5rem;
    font-weight: 700;
    width: 13rem;
}
</style>
<div class="Details-page">
    <div class="container">
        <form method="post" class="form-container">
            <input asp-for="Edit.ProductID" type="hidden" class="form-control" />

       
                <div class="form-group">
                    <label>ProductName:</label>
                    <p> @Model.Edit.ProductName</p>
                </div>

                <div class="form-group">
                    <label>ProductImage:</label>
                    <td>
                        <img src="~/image/@Model.Edit.ProductImage" alt="@Model.Edit.ProductName" style="max-width: 100px; max-height: 100px;" />
                    </td>
                </div>

                <div class="form-group">
                    <label>Category:</label>
                    @foreach(var i in Model.categories){
                                if(Model.Edit.CategoryID == i.CategoryId){
                                        <p>@i.CategoryName</p>
                                }   
                            }
                </div>

                <div class="form-group">
                    <label>ProductQuantity:</label>
                    <p> @Model.Edit.ProductQuantity</p>
                </div>
                <div class="form-group">
                    <label>ProductChipset:</label>
                    <p> @Model.Edit.ProductChipset</p>
                </div>
       
                <div class="form-group">
                    <label>ProductStorageInternal:</label>
                    <p> @Model.Edit.ProductStorageInternal</p>
                </div>
                <div class="form-group">
                    <label>ProductStorageExternal:</label>
                    <p>@Model.Edit.ProductStorageExternal</p>
                </div>


                <div class="form-group">
                    <label>ProductBatteryCapacity:</label>
                    <p> @Model.Edit.ProductBatteryCapacity</p>
                </div>
                <div class="form-group">
                    <label>ProductSelfieCamera:</label>
                    <p>@Model.Edit.ProductMainCamera</p>
                </div>
                <div class="form-group">
                    <label>ProductMainCamera:</label>
                    <p> @Model.Edit.ProductMainCamera</p>
                </div>

            <div class="form-group">
                <label>ProductDetailDescription:</label>
                <p> @Model.Edit.ProductDetailDescription</p>
            </div>
            <a type="submit" class="btn btn-success" asp-page="/AdminPage/ProductManagement">Cancel</a>
        </form>
    </div>
</div>

<style>
    .Details-page .container {
        max-width: 400px;
        margin: auto;
        margin-top: 50px;
    }

    .Details-page .form-container {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: auto;
    }
</style>
